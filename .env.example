# OpenAI API Key (Required for embeddings and chat)
OPENAI_API_KEY=your_openai_api_key_here

# LandingAI Vision Agent API Key (Required for document parsing)
# Get your key from: https://landing.ai/
VISION_AGENT_API_KEY=your_vision_agent_api_key_here

# Pinecone API Key (Required for vector storage)
# Get your key from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=due-diligence

# MongoDB Connection (Required for document metadata and metrics)
MONGO_DB=your_mongodb_connection_string_here
MONGO_DATABASE=due_diligence

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Data Directory
DATA_DIR=./uploads

# Google Drive Configuration (Optional)
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_CREDENTIALS_PATH=./credentials.json
